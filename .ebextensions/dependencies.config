# Sample corrected dependencies.config
packages:
  yum:
    python3-pip: []
    python3-devel: []
    gcc: []
    openssl-devel: []
    libffi-devel: []

container_commands:
  01_install_deps:
    command: |
      #!/bin/bash
      python3 -m pip install --upgrade pip
      if [ -f /var/app/current/requirements.txt ]; then
          pip install -r /var/app/current/requirements.txt
      else
          echo "ERROR: requirements.txt not found!"
          find /var/app/current -name "*.txt"
          exit 1
      fi
    leader_only: true
